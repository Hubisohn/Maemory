<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.maemory.MainAppController">

    <center>

        <VBox alignment="CENTER" spacing="10">

            <HBox alignment="CENTER" spacing="10">

                <VBox spacing="10">
                    <ImageView fx:id="front" accessibleText="front"/>
                    <Label text="front"/>
                </VBox>
                <VBox spacing="10">
                    <ImageView fx:id="back" accessibleText="back"/>
                    <Label text="back"/>
                </VBox>

            </HBox>

            <Button text="select folder" onAction="#onHelloButtonClick"/>

        </VBox>

    </center>

</BorderPane>
